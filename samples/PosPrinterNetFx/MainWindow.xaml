<Window x:Class="PosPrinterNetFx.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PosPrinterNetFx"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="20" HorizontalAlignment="Center" Orientation="Vertical">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 10">
            <TextBlock Text="Select POS Printer:" VerticalAlignment="Center" Margin="0 0 10 0" FontSize="30" />
            <ComboBox x:Name="PrinterComboBox" Width="300" FontSize="30" HorizontalAlignment="Center" />
        </StackPanel>
        <TextBlock Text="Receipt Text:" FontSize="30" HorizontalAlignment="Center" />
        <TextBox x:Name="ReceiptTextBox" Width="600" Height="150" FontSize="30" TextWrapping="Wrap" AcceptsReturn="True" HorizontalAlignment="Center" VerticalScrollBarVisibility="Auto" Margin="0 0 0 20" />
        <Button Content="Click me to print" Click="Button_Click" FontSize="30" HorizontalAlignment="Center" Padding="30 15" />
    </StackPanel>
</Window>
